<!DOCTYPE html>
<html>
<head>
    <meta charset="{{ _charset }}" />
    <meta name="robots" content="noindex,nofollow" />
    <title>{% block title %}{% endblock %}</title>
    <!-- Bootstrap -->
    <link href="{{ asset('bundles/resumeshop/css/bootstrap.css') }}" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link href="{{ asset('bundles/resumeshop/css/main.css') }}" rel="stylesheet" />

    <script src="{{ asset('bundles/resumeshop/js/jquery-1.10.2.js') }}"></script>
    <script src="{{ asset('bundles/resumeshop/js/jquery.history.js') }}"></script>
    <script src="{{ asset('bundles/resumeshop/js/bootstrap.js') }}"></script>
    <script src="{{ asset('bundles/resumeshop/js/main.js') }}"></script>

    {% block head %}{% endblock %}
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('shop_home') }}">Resume Shop</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <form class="navbar-form navbar-right" action="" method="get" id="search-form">
                    <input type="text" class="form-control" name="search" placeholder="Поиск..." value="{{ search }}">
                    <button type="submit" class="btn btn-success">Поиск</button>
                </form>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="col-md-2 sidebar categories">
            <h3>Категории</h3>
            {{ render(controller('ResumeShopBundle:Shop:allForFilter', {'filter': 'category', 'id_active': actives_id['category'] })) }}
        </div>
        <div class="col-md-8 content">
            {% block content %}{% endblock %}
        </div>
        <div class="col-md-2 sidebar providers">
            <h3>Производители</h3>
            {{ render(controller('ResumeShopBundle:Shop:allForFilter', {'filter': 'provider', 'id_active': actives_id['provider'] })) }}
        </div>
    </div>

    <div class="modal fade" id="loading" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"></div>

</body>
</html>


